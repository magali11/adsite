<h1>My ads</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Title</th>
    <th>Content</th>
    <th>User</th>
    <th>Picture</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @ads.each do |ad| %>
      <tr>
        <% if ad.category %>  #there should be a method of checking if there is any ad at the category, so it shouln'd be deleted
        <td><%= ad.category.name %></td>
        <% else %>
        <td></td>
        <% end %>
        <td><%= ad.title %></td>
        <td><%= ad.content %></td>
        <td><%= ad.user.username %></td>
        <td><%= image_tag ad.image_url(:small).to_s %></td>
        <td><%= link_to 'Details >>', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'New Ad', new_ad_path %>
