<p id="alert"><%= alert %></p>
<% if notice %>
  <p id="notice" class="alert alert-info"><%= notice %></p>
<% end %>

<%= form_tag sessions_path do %>
<fieldset>
  <legend>Login</legend>
 

      <div class ="controls"><%= text_field_tag :username, nil, :placeholder => 'Username' %></div>
 
      <div class ="controls"><%= password_field_tag :pass_input, nil, :placeholder => 'Password' %></div>
    <div class="actions">
      <%= submit_tag 'Login', :class=>'btn' %>
    </div>
</fieldset>
    
<% end %>